# Required - Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=

# Required - Comma-separated chat IDs to receive notifications
# Use @userinfobot or @getmyid_bot to get your chat ID
TELEGRAM_CHAT_IDS=

# Optional - Polling interval in seconds (default: 60)
POLL_INTERVAL_SECONDS=5

# Optional - Temperature change threshold in Celsius for notifications (default: 0.5)
CHANGE_THRESHOLD_C=0.6